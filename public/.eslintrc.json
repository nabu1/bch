{
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },

  "rules": {
    "array-bracket-spacing": 0,
    "arrow-parens": 0,
    "brace-style": ["error", "stroustrup"],
    "computed-property-spacing": 0,
    "func-call-spacing": 0,
    "indent": ["error", 2],
    "linebreak-style": 0,
    "max-len": [1, 120, 2],
    "no-console": 0,
    "no-multiple-empty-lines": [1, { "max": 1 }],
    "no-plusplus": 0,
    "no-spaced-func": 0,
    "no-whitespace-before-property": 0,
    "semi": ["error", "never"],
    "space-in-parens": 0,
    "space-before-function-paren": 0,
    "spaced-comment": 0,
    "no-trailing-spaces": 2
  }
}
